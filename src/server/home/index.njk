{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: ""
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-body" data-testid="app-page-body">
        <div class="govuk-inset-text">        
          <p>
            This service will tell you the risk of an area, not a specific property.
          </p>
        </div>
        <form id="postcode-form" method="post">
          <div class="govuk-form-group>
            <label class="govuk-label" for="postcode"> Enter a postcode </label>
            <div id="postcode-hint" class="govuk-hint">
              for example, WA4 1AB
            </div>
            <input class="govuk-input govuk-input--width-10" id="postcode" name="postcode" type="text" aria-describedby="postcode-hint">
          </div>
          <p></p>
          <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
              <button type="submit" id="post-code-button" class="govuk-button">Continue</button>
            </div>
          </div>
        </form>  
      </div>
    </div>
  </div>

{% endblock %}
